{
  "manifest_version": 2,
  "name": "Emoji Sound Reader",
  "version": "1.0",
  "description": "Lê texto da página e reproduz sons semânticos para emojis.",
  "permissions": ["tabs", "activeTab"],
  "background": {
    "scripts": ["background.js"]
  },
  "browser_action": {
    "default_title": "Emoji Sound Reader",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["emoji-mapper.js", "content-script.js"]
    }
  ],
  "web_accessible_resources": [
    "sounds/*.mp3"
  ]
}
